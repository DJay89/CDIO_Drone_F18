<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
<right>
    <VBox alignment="CENTER" spacing="10">
        <padding>
            <Insets left="10" right="10" />
        </padding>
        <children>
            <Label text="Hue Start" />
            <Slider fx:id="hueStart" blockIncrement="1" max="180" min="0" value="20" />
            <Label text="Hue Stop" />
            <Slider fx:id="hueStop" blockIncrement="1" max="180" min="0" value="50" />
            <Label text="Saturation Start" />
            <Slider fx:id="saturationStart" blockIncrement="1" max="255" min="0" value="60" />
            <Label text="Saturation Stop" />
            <Slider fx:id="saturationStop" blockIncrement="1" max="255" min="0" value="200" />
            <Label text="Value Start" />
            <Slider fx:id="valueStart" blockIncrement="1" max="255" min="0" value="50" />
            <Label text="Value Stop" />
            <Slider fx:id="valueStop" blockIncrement="1" max="255" min="0" value="255" />
        </children>
    </VBox>
</right>
<center>
    <HBox alignment="CENTER" spacing="5">
        <padding>
            <Insets left="10" right="10" />
        </padding>
        <children>
            <ImageView fx:id="originalFrame" />
            <VBox alignment="CENTER" spacing="5">
                <children>
                    <ImageView fx:id="maskImage" />
                    <ImageView fx:id="morphImage" />
                </children>
            </VBox>
        </children>
    </HBox>
</center>
<bottom>
    <VBox alignment="CENTER" spacing="15">
        <padding>
            <Insets bottom="25" left="25" right="25" top="25" />
        </padding>
        <children>
            <Button fx:id="cameraButton" alignment="center" onAction="#startCamera" text="Start camera" />
            <Separator />
            <Label fx:id="hsvCurrentValues" />
        </children>
    </VBox>
</bottom>
<top>
    <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="5.0" BorderPane.alignment="CENTER">
        <children>
            <Button fx:id="LAB" mnemonicParsing="false" onAction="#labfuc" onMouseClicked="#labfuc" text="LAB" />
            <Button fx:id="HSV" mnemonicParsing="false" onAction="#hsvfuc" onMouseClicked="#hsvfuc" text="HSV" />
            <Button fx:id="YCrCb" mnemonicParsing="false" onAction="#ycrcbfuc" onMouseClicked="#ycrcbfuc" text="YCrCb" />
            <Button fx:id="RGB" mnemonicParsing="false" onAction="#rgbfuc" text="RGB" />
        </children>
    </HBox>
</top>
</BorderPane>
